<section class="title">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1>PO Box Locations</h1>

			</div>
			<div class="col-md-3 col-md-offset-3">
				<div class="form-group has-feedback search">
        <%= form_tag(po_boxes_path, method: "get", id: "main-search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search PO Boxes", id: "search", class: "form-control" %>
        <%= submit_tag "Search", name: nil, class: "button" %>
        <% end %>
				</div>
			</div>
		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.section title -->

<section class="main-content employee">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h2>PO Boxes</h2>
				<div class="main-wrapper scrollbar-wrapper">
					<ul class="list-unstyled">
            <% @po_boxes.each do |box| %>
              <li><%= link_to box.box_number, po_box_path(box) %></li>
            <% end %>
					</ul>
				</div><!-- /.main-wrapper -->
			</div>
		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.section main-content -->
